<div class="card">
    <div class="card-body p-4">
        <div class="text-center mt-3">
            <div class="avatar-xl mx-auto">
                <div class="avatar-title bg-light text-primary h1 rounded-circle">
                    <i class="bx bxs-user"></i>
                </div>
            </div>
            <div class="mt-4 pt-2">
                <h5>You are Logged Out</h5>
                <p class="text-muted font-size-15">Thank you for your time, Enjoy!! </p>
                @if (Model.PostLogoutRedirectUri != null)
                {
                    <div class="mt-4">
                        <a class="PostLogoutRedirectUri btn btn-primary w-100 waves-effect waves-light" href="@Model.PostLogoutRedirectUri">Sign In to @Model.ClientName</a>
                    </div>
                }
                else{                    
                    <div class="mt-4">
                        <p class="badge bg-primary" id="redirect_message"></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
