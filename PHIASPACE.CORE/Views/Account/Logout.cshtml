                            <button class="col-4 btn btn-warning" style="float:left;">Yes</button>
                            <a href="/" class="col-4 btn btn-primary" style="float:right;">No</a>
                        </div>
                    </form> *@
                    <form asp-action="Logout">
                        <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                        <div class="form-group d-flex justify-content-between">
                            <button class="col-3 btn btn-warning" type="submit">Yes</button>
                            <a href="@Model.PreviousUrl" class="col-3 btn btn-primary">No</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
