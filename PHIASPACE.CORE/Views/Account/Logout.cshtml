@model LogoutViewModel
@{
    Layout = "_AuthLayout";
}

<div class="logout-page">
    <div class="row">
        <div class="col-sm-10">
            <div class="card">
                <div class="card-header">
                    <h2>STUDYSPACE Account Logout</h2>
                </div>
                <div class="card-body">
                    <div class="p-4">
                        <h4>Would you like to logut of STUDYSPACE? click Yes to proceed</h4>
                        <i class="badge badge-soft-primary font-size-15">Note that this action will log you out of most STUDYSPACE authentication supported applications</i>
                        <br/>
                    </div>
