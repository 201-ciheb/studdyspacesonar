@model PhiaPermission
@{
    ViewData["Title"] = "Permission";
}
<div class="page-title-box d-flex align-items-center justify-content-between">
    <div class="page-title-right">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a asp-controller="Permission" asp-action="Index">Permission</a></li>
            <li class="breadcrumb-item active">Add Permission</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">                
                <div class="row">
                    <div class="col-sm-8">
                        <div class="search-box me-2 d-inline-block">
                            <div class="position-relative">
                                <h4 class="card-title">Permission</h4>
                                <p class="card-title-desc">Add a new permission</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end card header -->
            <div class="card-body">
                <form enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3 row">
                        <label asp-for="Permission" class="col-md-2 col-form-label">Module</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" asp-for="Permission" required>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="PermissionClient" class="col-md-2 col-form-label">OAuth Client ID</label>
                        <div class="col-md-10">
                            <select asp-for="PermissionClient" class="form-select" asp-items="ViewBag.Clients" required>
                                <option value="">Select</option>
                            </select>
                        </div>
                    </div>
                    @* <div class="mb-3 row">
                        <label asp-for="PermissionModule" class="col-md-2 col-form-label">Module</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" asp-for="PermissionModule" required>
                        </div>
                    </div> *@
                    
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary w-md" onclick="if(!confirm('Are You sure you want to add this Permission?')) return false;">Submit</button>
                    </div>
                </form>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>

