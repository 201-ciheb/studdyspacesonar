@{
    Layout = "~/Views/Shared/_WallBoardLayout.cshtml";
}
<div>
    <ul>
        <li><a target="_blank" asp-controller="WallBoard" asp-action="Household">Household</a></li>
        <li><a target="_blank" asp-controller="WallBoard" asp-action="Age">Age</a></li>
        <li><a target="_blank" asp-controller="WallBoard" asp-action="Lab">Lab</a></li>
        <li><a target="_blank" asp-controller="WallBoard" asp-action="National">National</a></li>
        <li><a target="_blank" asp-controller="WallBoard" asp-action="Screening">Screening</a></li>
    </ul>
</div>

@section Styles {
    <style>
        body {
            background-color: #2c3e50;
            /* Dark background for contrast */
            font-family: Arial, sans-serif;
            /* Clean and readable font */
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        div {
            text-align: center;
        }

        ul {
            list-style-type: none;
            /* Remove default bullet points */
            padding: 0;
            margin: 0;
        }

        li {
            margin: 20px 0;
            /* Spacing between items */
        }

        a {
            display: inline-block;
            padding: 20px 40px;
            /* Padding for larger clickable area */
            background-color: #2196f347 !important;
            /* Button-like appearance */
            color: #fff;
            /* White text for contrast */
            font-size: 2rem;
            /* Large text for visibility */
            text-decoration: none;
            /* Remove underline */
            border-radius: 10px;
            /* Rounded corners */
            transition: background-color 0.3s ease;
            /* Smooth color transition */
        }

        a:hover{
            background-color:#ffffff;
        }
        a:active{
            background-color:#1f618d;
        }
    </style>
}