        //}
        function ld_issue(id) {
            $("#div_new").hide();
            $("#div_discussion").show();

            //get_issue(id);
            get_discussions(id);
            $('#issue_id').val(id);



        }

        function edit_issue() {
            $("#div_new").show();
            $("#div_discussion").hide();
            get_issue($('#issue_id').val());
        }

