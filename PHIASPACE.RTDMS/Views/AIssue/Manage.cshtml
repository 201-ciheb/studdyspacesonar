            $("#div_new").show();
            $("#div_discussion").hide();

            $("#form_title").text("New DM Ticket");
            $("#is_new").val("1");
            $("#title").val('');
            $("#id").val('');
            $("#ea_id").val('');
            $("#household_id").val('');
            $("#lab_id").val(0);
            $("#impact").val('');
            $("#resolution").val('');
            $("#issue_content").val('');
            $("#btn").text("Add Ticket");
        }

