@model TrainingModel;
@{
    ViewData["Title"] = "Training";
    @* SelectList courses = ViewBag.Courses;
    SelectList venues = ViewBag.Venues; *@
}
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Training</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Training</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Create</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="search-box me-2 d-inline-block">
                            <div class="position-relative">
                                <p class="card-title-desc">Setup a new training</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end card header -->
            <div class="card-body">
                <form action="#">
                    <ul class="wizard-nav mb-5">
                        <li class="wizard-list-item">
                            <div class="list-item active">
                                <div class="step-icon" data-bs-toggle="tooltip" data-bs-placement="top"
                                    title="Training detail">
                                    <i class="mdi mdi-teach"></i>
                                </div>
                            </div>
                        </li>
                        <li class="wizard-list-item">
                            <div class="list-item">
                                <div class="step-icon" data-bs-toggle="tooltip" data-bs-placement="top"
                                    title="Participants">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                        </li>
                        <li class="wizard-list-item">
                            <div class="list-item">
                                <div class="step-icon" data-bs-toggle="tooltip" data-bs-placement="top"
                                    title="Venue">
                                    <i class="mdi mdi-home-city"></i>
                                </div>
                            </div>
                        </li>
                        <li class="wizard-list-item">
                            <div class="list-item">
                                <div class="step-icon" data-bs-toggle="tooltip" data-bs-placement="top"
                                    title="Facilitators">
                                    <i class="bx bxs-user-voice"></i>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="wizard-tab" style="display:block;">
                        <div class="text-center mb-4">
                            <h5>Training Details</h5>
                            <p class="card-title-desc">Fields marked <code>(*)</code> are required.</p>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label required" ></label>
                                        <input type="text" class="form-control" placeholder="Enter Training Name" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div><!-- end col -->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label asp-for="FundingType">Funding Type</label>                    
                                        <select class="form-select" name="FundingType" asp-items="ViewBag.FundingType">
                                            <option value="">Select</option>
                                        </select>
                                        <span asp-validation-for="FundingType" class="text-danger"></span>
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row -->
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label asp-for="StartDate" class="form-label required" ></label>
                                        <input type="date" class="form-control" asp-for="StartDate">
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div><!-- end col -->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label asp-for="EndDate" class="form-label required" ></label>
                                        <input type="date" class="form-control" asp-for="EndDate">
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row -->
                            @* <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="basicpill-phoneno-input"
                                            class="form-label">Phone</label>
                                        <input type="text" class="form-control" placeholder="Enter Phone"
                                            id="basicpill-phoneno-input">
                                    </div>
                                </div><!-- end col -->
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        <label for="basicpill-email-input" class="form-label">Email</label>
                                        <input type="email" class="form-control" placeholder="Enter Email"
                                            id="basicpill-email-input">
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label for="basicpill-address-input"
                                            class="form-label">Address</label>
                                        <textarea id="basicpill-address-input" class="form-control"
                                            placeholder="Enter Address" rows="2"></textarea>
                                    </div>
                                </div><!-- end col -->
                            </div><!-- end row --> *@
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3 mt-4">
                        @* <button type="button" class="btn btn-primary w-sm" >Previous</button> *@
                        <button type="submit" class="btn btn-primary w-sm ms-auto">Save and Continue</button>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- end col -->
</div><!-- end row -->
@section Scripts
{
    <script>
        
    </script>
}
