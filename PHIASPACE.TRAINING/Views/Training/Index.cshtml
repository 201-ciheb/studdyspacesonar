@model IEnumerable<PHIASPACE.TRAINING.DAL.Model.Db.TblTraining>;

@{
    ViewData["Title"] = "Training";
}
@* <%- contentFor('breadcrumb') %> *@

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Facilities</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Training</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr>
<!-- end page title -->
<div class="row">
    <div class="col-xl-12">
        <table class="table table-striped table-hover" id="training_table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Training ID</th>
              <th scope="col">Course</th>
              <th scope="col">Start Date</th>
              <th scope="col">End Date</th>
              <th scope="col">Venue</th>
              <th scope="col">Participants</th>
              <th scope="col">Facilitators</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
                @{
                    int count = 0;
                    if (Model.Count() == 0)
                    {
                        <p>No Records Found</p>
                    }
                    else{
                        @foreach (var item in Model)
                        {
                            count++;
                           <tr>
                               <td>@count</td>
                               <td>@item.TrainingId</td>
                               <td>@item.Course.CourseName</td>
                               <td>@item.StartDate</td>
                               <td>@item.EndDate</td>
                               <td>@item.Venue</td>
                                <td>@item.TrainingParticipants.Count()</td>
                               <td>@item.TrainingFacilitators.Count()</td>
                               <td><a asp-action="Edit" class="edit" asp-route-id="@item.TrainingId"><i class="fa fa-edit" title="Edit"></i></a></td>
                           </tr>
                        }
                    }
                }
          </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
         jQuery(document).ready(function () {
            $('#training_table').DataTable();
         });
    </script>
}
