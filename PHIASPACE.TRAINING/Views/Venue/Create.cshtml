@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@model VenueModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();
}
@{
    ViewData["Title"] = "Venue";
}
<div class="page-title-box d-flex align-items-center justify-content-between">
    <div class="page-title-right">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a asp-controller="Venue" asp-action="Index">@localizer["Venue"]</a></li>
            <li class="breadcrumb-item active">@localizer["Add Venue"]</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">                
                <div class="row">
                    <div class="col-sm-8">
                        <div class="search-box me-2 d-inline-block">
                            <div class="position-relative">
                                <h4 class="card-title">@localizer["Venue"]</h4>
                                <p class="card-title-desc">@localizer["Add a new venue"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end card header -->
            <div class="card-body">
                <form enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3 row">
                        <label asp-for="ProvinceId" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <select asp-for="ProvinceId" class="form-select" asp-items="ViewBag.Provinces" required>
                                <option value="">Select</option>
                            </select>
                        </div>
                    </div>     
                    <div class="mb-3 row">
                        <label asp-for="DistrictId" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <select asp-for="DistrictId" class="form-select" asp-items="ViewBag.Districts" required>
                                <option value="">Select</option>
                            </select>
                        </div>
                    </div>   
                    <div class="mb-3 row">
                        <label asp-for="VenueName" class="col-md-2 col-form-label">@localizer["Venue name"]</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" asp-for="VenueName" required>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Address" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" type="search" asp-for="Address">
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Venue" asp-action="Index" class="btn btn-primary float-start"> <i class="mdi mdi-arrow-left-bold-outline text-white font-size-16"></i>Cancel</a>
                        <button type="submit" class="btn btn-primary float-end">Submit  <i class="mdi mdi-arrow-right-bold-outline text-white font-size-16"></i></button>
                    </div>
                </form>
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>

@section Styles{
    
}

@section Scripts{
    
}