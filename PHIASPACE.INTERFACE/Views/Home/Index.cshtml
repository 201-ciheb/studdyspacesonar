@model ProgressCount
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <b class="alert alert-primary">Assessment Updates</b>
</div>
<div class="row">
    <div class="col-lg-4">
        <div class="card border border-primary">
            <div class="card-header bg-primary border-primary">
                <h5 class="my-0 text-white"><i class="mdi mdi-bullseye-arrow me-3"></i>Today</h5>
            </div>
            <div class="card-body">
                <h5 class="dashboard_number text-primary">@Model.Today</h5>
            </div>
        </div>
    </div><!-- end col -->
    <div class="col-lg-4">
        <div class="card border border-primary">
            <div class="card-header bg-primary border-primary">
                <h5 class="my-0 text-white"><i class="mdi mdi-block-helper me-3"></i>48 Hrs</h5>
            </div>
            <div class="card-body">
                <h5 class="dashboard_number text-primary">@Model.SinceYesterday</h5>
            </div>
        </div>
    </div><!-- end col -->
    <div class="col-lg-4">
        <div class="card border border-success">
            <div class="card-header bg-success border-success">
                <h5 class="my-0 text-white"><i class="mdi mdi-check-all me-3"></i>All</h5>
            </div>
            <div class="card-body">
                <h5 class="dashboard_number text-success">@Model.AllRecords</h5>
            </div>
        </div>
    </div><!-- end col -->
</div>

<div class="row">
    <b class="alert alert-primary">County Progress</b>
</div>
<div class="row">
    <div class="col-lg-4">
        <div class="card border border-primary">
            <div class="card-header bg-primary border-primary">
                <h5 class="my-0 text-white"><i class="mdi mdi-block-helper me-3"></i>All</h5>
            </div>
            <div class="card-body">
                <h5 class="dashboard_number text-primary">@Model.AllCounty</h5>
            </div>
        </div>
    </div><!-- end col -->
    <div class="col-lg-4">
        <div class="card border border-success">
            <div class="card-header bg-success border-success">
                <h5 class="my-0 text-white"><i class="mdi mdi-check-all me-3"></i>Assessed</h5>
            </div>
            <div class="card-body">
                <h5 class="dashboard_number text-success">@Model.Assessed</h5>
            </div>
        </div>
    </div><!-- end col -->
</div>